# shellcheck shell=bash
# shellcheck disable=SC1090,SC1091

if [[ "$(whoami)" == "root" ]]; then
    export PS1="\[\033[01;31m\]$(hostname)\[\033[01;32m\] \w $\[\033[00m\] "
else
    export PS1="\[\033[0;37m\]\u@\h\[\033[0;32m\] \w \$\[\033[00m\] "
fi

case "${TERM}" in
xterm* | rxvt*)
    PS1="\[\e]0;\h: \w\a\]${PS1}"
    ;;
*) ;;
esac

alias ls='ls -a --color=auto'
alias ll='ls -ahl --color=auto'

